

  <div class="row ">
    <div class="col-lg-12 ">
      <div class="mx-auto mt-1" style="width: 400px">
        <%= form_with url: search_path, local: true,data: { turbo:false } do |form|%>
          <div class="form-group ">
            <%= form.label:ip, 'Search for an IP '%>
            <%= form.text_field:ip, placeholder: 'Eg. 8.8.8.8', class: 'form-control mb-2' %>
          </div>
          <%= form.submit "Search",class:"btn btn-success btn-block" %>

        <% end %>    
      </div>
 <div class="d-flex gap-3">   
<table class="table w-50 " >
  <thead class="text-light " style="background-color: #B93425">
    <tr>
      <th class="w-25">General Information</th>
      <th class="w-25">Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Hostnames</th>
      <td><%=@hostnames&.join(', ')%></td>
    </tr>
    <tr>
      <th>Country</th>
      <td><%= @country %></td>
    </tr>
     <tr>
      <th>City</th>
      <td><%= @city %></td>
    </tr>
     <tr>
      <th>Organization</th>
      <td><%= @org %></td>
    </tr>
     <tr>
      <th>ISP</th>
      <td><%= @isp %></td>
    </tr>
    <tr>
      <th>ASN</th>
      <td><%= @asn %></td>
    </tr>
  </tbody>
</table>
<table class="table w-50 " >
  <thead class="text-light " style="background-color: #B93425">
    <tr>
      <th >Open Ports</th>
      <th >Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Ports</th>
      <td><%=@ports&.join(', ')%></td>
    </tr>
  </tbody>
</table>
</div>  
  </div>
